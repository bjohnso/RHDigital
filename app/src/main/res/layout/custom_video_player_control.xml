<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageButton android:id="@+id/exo_exit"
            android:src="@drawable/ic_arrow_back_black"
            style="@style/video_player_button" />

        <TextView
          android:id="@+id/exo_title"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:textSize="12dp"
          android:textAlignment="textEnd"
          android:paddingEnd="10dp"
          android:gravity="center"
          tools:ignore="RtlCompat" />
    </LinearLayout>

<LinearLayout
  android:id="@+id/main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
  android:layout_centerInParent="true"
    android:orientation="horizontal"
    android:layout_above="@+id/seek"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageButton android:id="@id/exo_rew"
        android:src="@drawable/ic_skip_previous"
        style="@style/video_player_button" />

    <ImageButton android:id="@id/exo_play"
        android:src="@drawable/ic_play"
        style="@style/video_player_button"/>

    <ImageButton android:id="@id/exo_pause"
        android:src="@drawable/ic_pause"
        style="@style/video_player_button" />

    <ImageButton android:id="@id/exo_ffwd"
        android:src="@drawable/ic_skip_next"
        style="@style/video_player_button" />

</LinearLayout>

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_above="@+id/seek">

    <ImageButton android:id="@+id/exo_full"
      android:src="@drawable/ic_fullscreen"
      style="@style/video_player_button"
      android:gravity="end"/>

    <ImageButton android:id="@+id/exo_full_exit"
      android:src="@drawable/ic_fullscreen_exit"
      style="@style/video_player_button" />

  </LinearLayout>

  <LinearLayout
    android:id="@+id/seek"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal">

    <TextView android:id="@id/exo_position"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="14sp"
      android:textStyle="bold"
      android:paddingLeft="4dp"
      android:paddingRight="4dp"
      android:includeFontPadding="false"
      android:textColor="#FFBEBEBE"/>

    <View android:id="@id/exo_progress_placeholder"
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="26dp"/>

    <TextView android:id="@id/exo_duration"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="14sp"
      android:textStyle="bold"
      android:paddingLeft="4dp"
      android:paddingRight="4dp"
      android:includeFontPadding="false"
      android:textColor="#FFBEBEBE"/>

  </LinearLayout>

</RelativeLayout>
