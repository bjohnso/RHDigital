<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <RelativeLayout
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:background="@drawable/background_white">

    <TextView
      android:id="@+id/user_profile_edit_modal_confirm_header"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="You Have Unsaved Changes"
      android:textColor="@color/colorBlack"
      android:textSize="16sp"
      android:layout_marginTop="20dp"
      android:layout_marginLeft="20dp"
      android:layout_centerHorizontal="true"
      />

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_alignParentBottom="true"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="20dp"
      android:orientation="vertical">

      <Button
        android:id="@+id/user_profile_edit_modal_confirm_save_button"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="@color/bar_dark"
        android:text="SAVE CHANGES"
        android:textSize="8sp"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"/>

    <Button
      android:id="@+id/user_profile_edit_modal_confirm_discard_button"
      android:layout_width="220dp"
      android:layout_height="wrap_content"
      style="@style/Widget.AppCompat.Button.Borderless"
      android:background="@color/bar_dark"
      android:text="DISCARD CHANGES"
      android:textSize="8sp"
      android:textColor="@color/white" />

    </LinearLayout>

  </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

