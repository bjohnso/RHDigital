<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:paddingTop="20dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/courses_card_item"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/lightGrey">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/courses_card_item_image_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"/>

            <RelativeLayout
                android:layout_below="@id/courses_card_item_image_view"
                android:id="@+id/courses_card_item_title_holder"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:background="@color/deepGrey">

                <TextView
                    android:id="@+id/courses_text_header_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingStart="10dp"
                    android:text="Header"
                    android:textSize="18dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@id/courses_card_item_title_holder"
                android:id="@+id/courses_card_item_view_info"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@color/lightGrey">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Info"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif"
                    android:layout_toLeftOf="@+id/info_button"
                    android:layout_centerInParent="true"
                    android:textSize="20dp"/>

                <ImageButton
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:id="@+id/info_button"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="@color/lightGrey"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_arrow_right"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>