<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:background="@drawable/background_alt">

  <ImageButton
    android:id="@+id/user_profile_back_button"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="10dp"
    android:scaleType="fitXY"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:src="@drawable/ic_arrow_back_black"
    style="@style/Widget.AppCompat.Button.Borderless"/>

  <ImageButton
    android:id="@+id/user_profile_edit_image_button"
    style="@style/Widget.AppCompat.Button.Borderless"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:scaleType="fitXY"
    android:src="@drawable/ic_user"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintHorizontal_bias="0.497"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.074" />

  <LinearLayout
    android:id="@+id/text_header_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:paddingTop="5dp"
    app:layout_constraintTop_toBottomOf="@id/user_profile_edit_image_button"
    android:orientation="vertical">

    <TextView
      android:id="@+id/user_profile_edit_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      android:text="Name"
      android:textSize="30sp"/>

    <TextView
      android:id="@+id/user_profile_edit_username"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      android:text="username"
      android:textSize="24sp"/>

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/text_header_container"
    android:orientation="vertical">

    <Button
      android:id="@+id/user_profile_edit_profile_button"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:text="Edit Profile"
      android:textAllCaps="false"
      android:textAlignment="textStart"
      style="@style/Widget.AppCompat.Button.Borderless"
      android:drawableRight="@drawable/ic_arrow_right"
      android:textSize="18sp"/>

    <Button
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:text="Settings"
      android:textAllCaps="false"
      android:textAlignment="textStart"
      style="@style/Widget.AppCompat.Button.Borderless"
      android:drawableRight="@drawable/ic_arrow_right"
      android:textSize="18sp"/>

    <Button
      android:id="@+id/user_profile_about_button"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:text="About RH Digital"
      android:textAllCaps="false"
      android:textAlignment="textStart"
      style="@style/Widget.AppCompat.Button.Borderless"
      android:drawableRight="@drawable/ic_arrow_right"
      android:textSize="18sp"/>

    <Button
      android:id="@+id/user_profile_privacy_policy_button"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:text="Privacy Policy"
      android:textAllCaps="false"
      android:textAlignment="textStart"
      style="@style/Widget.AppCompat.Button.Borderless"
      android:drawableRight="@drawable/ic_arrow_right"
      android:textSize="18sp"/>

    <Button
      android:id="@+id/user_profile_logout_button"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:text="Logout"
      android:textAllCaps="false"
      android:textAlignment="textStart"
      style="@style/Widget.AppCompat.Button.Borderless"
      android:drawableRight="@drawable/ic_arrow_right"
      android:textSize="18sp"/>

  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
