<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:background="@drawable/background_alt">

  <RelativeLayout
    android:id="@+id/button_header"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:orientation="horizontal"
    android:background="@color/bar">

    <ImageButton
      android:id="@+id/user_profile_settings_back_button"
      android:layout_width="50dp"
      android:layout_height="match_parent"
      android:layout_marginLeft="10dp"
      android:scaleType="fitXY"
      android:src="@drawable/ic_arrow_back_black"
      style="@style/Widget.AppCompat.Button.Borderless"/>

    <TextView
      android:layout_toRightOf="@id/user_profile_settings_back_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20dp"
      android:textSize="20sp"
      android:text="Settings"
      android:layout_centerVertical="true"/>

  </RelativeLayout>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:layout_marginTop="50dp"
    android:fillViewport="true"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent">

    <LinearLayout
      android:paddingTop="20dp"
      android:paddingBottom="40dp"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <LinearLayout
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/user_profile_edit_first_name_button"
        style="@style/Widget.AppCompat.Button.Borderless">
        <Switch
          android:id="@+id/user_profile_settings_wifi_switch"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="20dp"
          android:paddingBottom="20dp"
          android:text="Play Video Over Wifi Only"
          android:textSize="16sp"/>
      </LinearLayout>

      <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clickable="true"
        android:id="@+id/user_profile_edit_last_name_button"
        style="@style/Widget.AppCompat.Button.Borderless">
        <Switch
          android:id="@+id/user_profile_settings_notifications_switch"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="20dp"
          android:paddingBottom="20dp"
          android:text="Notifications"
          android:textSize="16sp"/>
      </LinearLayout>

      <LinearLayout
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/user_profile_edit_title_button"
        style="@style/Widget.AppCompat.Button.Borderless">
        <TextView
          android:clickable="false"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:text="Change Password"
          android:textColor="@color/white"
          android:textAllCaps="false"
          android:textAlignment="textStart"
          android:drawableRight="@drawable/ic_arrow_right"
          android:textSize="16sp"/>
      </LinearLayout>

      <LinearLayout
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left"
        android:id="@+id/user_profile_edit_city_button"
        style="@style/Widget.AppCompat.Button.Borderless">
        <TextView
          android:clickable="false"
          android:layout_width="wrap_content"
          android:layout_height="40dp"
          android:text="App Version"
          android:textColor="@color/white"
          android:textAllCaps="false"
          android:textSize="16sp"/>

        <TextView
          android:clickable="false"
          android:gravity="end"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:text="v1.0.0"
          android:textColor="@color/white"
          android:textAllCaps="false"
          android:textSize="16sp"/>

      </LinearLayout>

    </LinearLayout>

  </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>


