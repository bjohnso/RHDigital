<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.rhdigital.rhclient.activities.rhapp.viewmodel.ProfileViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/background_alt">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profile_edit_image_button"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/white"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_user_inactive"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/text_header_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/user_profile_edit_image_button"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_profile_edit_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="@{viewModel.user.name}"
                tools:text="Name"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/user_profile_edit_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="@{viewModel.user.email}"
                tools:text="email"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_header_container"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonEditProfile"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Edit Profile"
                android:textAllCaps="false"
                android:textAlignment="textStart"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:drawableEnd="@drawable/ic_chevron_right"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/user_profile_settings_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Settings"
                android:textAllCaps="false"
                android:textAlignment="textStart"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:drawableEnd="@drawable/ic_chevron_right"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/user_profile_about_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="About RH Digital"
                android:textAllCaps="false"
                android:textAlignment="textStart"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:drawableRight="@drawable/ic_chevron_right"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/user_profile_privacy_policy_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Privacy Policy"
                android:textAllCaps="false"
                android:textAlignment="textStart"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:drawableEnd="@drawable/ic_chevron_right"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/user_profile_logout_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Logout"
                android:textAllCaps="false"
                android:textAlignment="textStart"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:drawableEnd="@drawable/ic_chevron_right"
                android:textSize="16sp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>