<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/background">

  <LinearLayout
    android:id="@+id/sign_in_container"
    android:layout_width="350dp"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:padding="10dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
      android:id="@+id/reauthenticate_modal_header"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="25dp"
      android:layout_marginBottom="10dp"
      android:text="Confirm Password"
      android:textColor="@color/link_text_highlight"
      android:textSize="16sp" />

    <AutoCompleteTextView
      android:id="@+id/reauthenticate_modal_password_input"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:layout_marginBottom="10dp"
      android:background="@drawable/bar"
      android:drawablePadding="5dp"
      android:hint="Password"
      android:inputType="textPassword"
      android:paddingStart="10dp"
      android:textColor="@color/input_text"
      android:textSize="12sp" />

    <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/reauthenticate_modal_submit_btn"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:layout_gravity="center"
      android:background="@drawable/submit_active"
      android:text="Next"
      android:textAllCaps="false"
      android:textColor="@color/submit_text" />

  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

